{% extends  'base.html.twig'%}
{#{%extends 'bootstrap_3_layout.html.twig'%}#}
{%block title%}
    Liste des Pfes
{%endblock%}

{%block body%}
{{ parent( ) }}
    <br>
<div class="container row col-12">


    {%for pfe in pfeet %}
        <div class="container col-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ pfe.Student }}</h5>
                    <p class="card-text">{{ pfe.Title }}</p>
                    <p class="card-text">{{ pfe.Entreprise }}</p>
                </div>
            </div>
            <br>
        </div>
    {%endfor%}
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {%if numPage != 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{path('app_pfe_root',{ numPage :  numPage - 1})}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item" ><a class="page-link" href="{{path('app_pfe_root',{ numPage : 1 })}}"> << </a></li>
            {% endif %}


            {%for i in numPage-1 .. numPage+1 %}
                {%if i in 1 .. nbPage %}
                    <li class="page-item" >
                        <a class="page-link"
                            {%if numPage == i %}
                                style="background-color: #DDDDDD"
                            {%endif%}
                        href="{{path('app_pfe_root',{ numPage : i })}}">{{i}}</a></li>
                {%endif%}
            {%endfor%}


            {%if numPage != nbPage %}
                <li class="page-item" ><a class="page-link" href="{{path('app_pfe_root',{ numPage : nbPage })}}"> >> </a></li>
                <li class="page-item">
                    <a class="page-link" href="{{path('app_pfe_root',{ numPage : numPage +1})}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
</div>
{%endblock%}